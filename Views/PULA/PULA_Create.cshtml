                        <tr>
                            <td>Additional Information:</td>
                            <td>
                                <textarea class="bltTextInput ui-shadow-inset" rows="8" id="addInfo" placeholder="Provide any necessary additional information in this text box." id="addInfo" name="anAIPULA.ADDITIONAL_INFORMATION"></textarea>
