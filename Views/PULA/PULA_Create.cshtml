                    </table>
                    @* end Checkbox section with hidden inputs *@

                    @* start large text input section *@ 
                    <table style="width:90%">
                        <tr><td></td></tr>
                        <tr>
                            <td style="width:30%">Base Data:</td>
                            <td>
